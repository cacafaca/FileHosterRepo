@page "/"
@using WebAppBlazor.ViewModel
@using System.Security.Claims
@inject IIndexViewModel indexViewModel

@if (headers != null)
{
<h1>Last 10 medias</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var header in headers)
            {
        <tr>
            <td>@header.Name</td>
            <td>@header.Description</td>
        </tr>
            }
    </tbody>
</table>
}
else if (error != null)
{
<h1>Error</h1>
<h3>@error</h3>
}

@code {
    private IList<Dto.Api.Response.MediaHeader> headers;
    private string error = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            //Http.DefaultRequestHeaders.Host = ""
            //Http.DefaultRequestHeaders.Remove("Access-Control-Allow-Credentials");
            //Http.DefaultRequestHeaders.Add("Access-Control-Allow-Credentials", "true");
            //headers = await indexViewModel.GetLast10Async();
            error = await indexViewModel.GetLast10StringAsync();
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}