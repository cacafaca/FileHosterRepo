@page "/"
@inject HttpClient Http

@if (headers != null)
{
<h1>Last 10 medias</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var header in headers)
            {
        <tr>
            <td>@header.Name</td>
            <td>@header.Description</td>
        </tr>
            }
    </tbody>
</table>
}
else if (error != null)
{
<h1>Error</h1>
<h3>@error</h3>
}

@code {
    private Dto.Api.Response.MediaHeader[] headers;
    private string error = null;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            headers = await Http.GetFromJsonAsync<Dto.Api.Response.MediaHeader[]>("https://localhost:44300/Media/List10");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}